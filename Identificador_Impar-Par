#include <stdio.h>
#include <stdlib.h>

/* 1- Faça um algoritmo que receba um número inteiro, 
identifique se este e par ou impar, 
utilize o modulo de 2 para calcular o resto da divisão, 
se o resto da divisão for zero (o número e par) caso o
 resto da divisão for 1 (o número e impar) */

int main(int argc, char *argv[]) {
	int numero, resto;
	printf("informe um numero :");
	scanf("%d", &numero);
	// Modulo de 2 traz o resto da divisão inteira
	resto = numero % 2; 
	//Expressões relacionais: == igual != diferente > maior < menor
	if(resto == 0)
	{
		printf("numero par \n");		
	} 
	else
	{
		printf("numero impar \n");		
	}
	
	
	return 0;
}
